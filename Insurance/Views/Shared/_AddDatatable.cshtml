 <script>

    $('#example').DataTable({
        colReorder: true,
        lengthMenu: [10, 50, 100, 250, 500],
        layout: {
            topStart: {
                buttons: [
                    {
                        extend: 'excelHtml5',
                        text: 'Excel <i class="bi bi-file-earmark-spreadsheet-fill"> </i>',
                        title:null,
                        exportOptions: {
                           // columns: ':visible & :not(:last-child)'
                            columns: function (idx, data, node) {                               
                                // Get the total number of columns
                                var totalColumns = $('#example').DataTable().columns().header().length;
                                // Return true for visible columns except the last one
                                return $(node).is(':visible') && idx < totalColumns - 1;
                            }
                        }
                    },
                    {
                        extend: 'colvis',
                        text: 'Column'
                    },
                    {
                        extend: 'pageLength',
                        text: 'Page total'
                    },
                ]
            }
        }
    });
</script> 
