@model RiskRegisterViewModel
@inject IUtility _utility
@{
    ViewData["Title"] = "Register Risk";
}

<div class="container mt-2">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="CreateUpdate" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="ID" type="hidden" />
                <div class="card p-4 mb-2">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="RegisterDate" class="form-label"></label>
                            <input asp-for="RegisterDate" type="date" class="form-control">
                            <span asp-validation-for="RegisterDate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Department" class="form-label"></label>
                            <select asp-for="Department" class="form-control" asp-items="@await _utility.GetDepartmentSelectListItems() as SelectList">
                                <option value="" selected disabled>--Please Select--</option>
                            </select>
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="RiskDescription" class="form-label"></label>
                            <textarea asp-for="RiskDescription" class="form-control"></textarea>
                            <span asp-validation-for="RiskDescription" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="PrimaryRisk" class="form-label"></label>
                            <select asp-for="PrimaryRisk" class="form-control" asp-items="@await _utility.GetRiskCategorySelectListItems() as SelectList">
                                <option value="" selected disabled>--Please Select--</option>
                            </select>
                            <span asp-validation-for="PrimaryRisk" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="SecondaryRisk" class="form-label"></label>
                            <select asp-for="SecondaryRisk" class="form-control" asp-items="@await _utility.GetRiskCategorySelectListItems() as SelectList">
                                <option value="" selected disabled>--Please Select--</option>
                            </select>
                            <span asp-validation-for="SecondaryRisk" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="LikeHood" class="form-label"></label>
                            <select asp-for="LikeHood" class="form-control" asp-items="@await _utility.GetLikehoodSelectListItems() as SelectList">
                                <option value="" selected disabled>--Please Select--</option>
                            </select>
                            <span asp-validation-for="LikeHood" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Impact" class="form-label"></label>
                            <select asp-for="Impact" class="form-control" asp-items="@await _utility.GetImpactSelectListItems() as SelectList">
                                <option value="" selected disabled>--Please Select--</option>
                            </select>
                            <span asp-validation-for="Impact" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="RiskOwner" class="form-label"></label>
                            <select asp-for="RiskOwner" class="form-control" asp-items="@await _utility.GetDepartmentSelectListItems() as SelectList">
                                <option value="" selected disabled>--Please Select--</option>
                            </select>
                            <span asp-validation-for="RiskOwner" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="RiskStatus" class="form-label"></label>
                            <select asp-for="RiskStatus" class="form-control" asp-items="@await _utility.GetRiskStatusSelectListItems() as SelectList">
                                <option value="" selected disabled>--Please Select--</option>
                            </select>
                            <span asp-validation-for="RiskStatus" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Quantification" class="form-label"></label>
                            <input asp-for="Quantification" class="form-control">
                            <span asp-validation-for="Quantification" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="MitigationAction" class="form-label"></label>
                            <textarea asp-for="MitigationAction" class="form-control"></textarea>
                            <span asp-validation-for="MitigationAction" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="ClosedDate" class="form-label"></label>
                            <input asp-for="ClosedDate" type="date" class="form-control">
                            <span asp-validation-for="ClosedDate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="RiskResponse" class="form-label"></label>
                            <textarea asp-for="RiskResponse" class="form-control"></textarea>
                            <span asp-validation-for="RiskResponse" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="Remarks" class="form-label"></label>
                            <textarea asp-for="Remarks" class="form-control"></textarea>
                            <span asp-validation-for="Remarks" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between mt-4">
                        <a class="btn btn-warning" asp-action="@ViewBag.BackUrl">Back</a>
                        <input type="submit" value="Send" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
