@page
@model ChangePasswordModel
@{
    Layout = "_SideBar";
    ViewData["Title"] = "पासवोर्ड बदल्नुस";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}


<partial name="_StatusMessage" for="StatusMessage" />

<div class="xs-pd-20-10">
    <div class="min-height-200px">
        <div class="row">
            <div class="col-md-12">
                <form id="change-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="pd-20 px-5 py-2 bg-white  border-radius-4 box-shadow">
                        <div class="form-container">
                            <div class="title">
                                <h4>१. पासवोर्ड विवरण</h4>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-3">
                                    <label asp-for="Input.OldPassword" class="form-label"></label>
                                    <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" />
                                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-3">
                                    <label asp-for="Input.NewPassword" class="form-label"></label>
                                    <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-3">
                                    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between mt-4">
                        <a class="btn btn-warning" asp-action="RedirectRought" asp-controller="Home" asp-area="">पछाडी फर्कनुहोस्</a>
                        <input type="submit" value="सुरक्षित गर्नुहोस्" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
